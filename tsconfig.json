{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "lib": ["esnext", "dom"],
      "types": ["jest", "node"],
      "jsx": "react",
      "allowJs": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
    "exclude": ["node_modules", "**/__tests__/*", "**/*.test.tsx", "**/*.test.ts", "**/*.spec.ts", "**/*.spec.tsx"]
  }
  